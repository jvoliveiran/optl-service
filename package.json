{
  "name": "optl-service",
  "version": "1.0.0",
  "description": "Simple TypeScript Express API",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev:up": "docker compose up -d",
    "dev:down": "docker compose down",
    "migrate": "knex migrate:latest --knexfile src/knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile src/knexfile.ts",
    "simulate": "node simulate-requests.js",
    "simulate:heavy": "node simulate-requests.js --requests 500 --concurrent 10",
    "simulate:light": "node simulate-requests.js --requests 20 --delay 500"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-jaeger": "^2.2.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.15.5",
    "@types/winston": "^2.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
